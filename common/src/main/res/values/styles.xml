<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.Shimori.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Widget.Shimori.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.Shimori.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemBackground">?attr/selectableItemBackground</item>
    </style>

    <!--TOOLBAR-->
    <style name="Widget.Shimori.DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.Shimori.Toolbar.Button" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.Shimori.Toolbar.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <!--BUTTONS-->
    <style name="Widget.Shimori.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Shimori.Button</item>
    </style>

    <style name="Widget.Shimori.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Shimori.Button</item>
    </style>

    <style name="Widget.Shimori.Button.Circle" parent="Widget.Shimori.Button.Outlined">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Circle</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="Widget.Shimori.Button.Circle.Secondary.Transparent" parent="Widget.Shimori.Button.Circle">
        <item name="iconTint">@color/selector_default_text_color</item>
        <item name="android:textColor">@color/selector_default_text_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/selector_button_gray_stroke_color</item>
        <item name="android:shadowColor">?attr/colorSecondaryTransparent</item>
        <item name="rippleColor">@color/selector_default_ripple_color</item>
    </style>

    <!--NAVIGATION VIEW-->
    <style name="Widget.Shimori.NavigationView" parent="">
        <item name="itemIconTint">?attr/colorOnSurface</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Shimori.NavigationView.Normal" parent="Widget.Shimori.NavigationView">
        <item name="listPreferredItemHeightSmall">@dimen/menu_item_height</item>
        <item name="selectableItemBackground">@drawable/bg_menu_item_ripple</item>
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Shimori.NavigationView.Large" parent="Widget.Shimori.NavigationView">
        <item name="listPreferredItemHeightSmall">@dimen/menu_item_large_height</item>
        <item name="selectableItemBackground">@drawable/bg_menu_item_ripple_large</item>
        <item name="itemTextAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!--IMAGE VIEW-->
    <style name="ShapeableImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ShapeableImageView.Stroke" parent="ShapeableImageView">
        <item name="strokeColor">?attr/colorDivider</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!--SHAPES-->
    <style name="ShapeAppearanceOverlay.Circle" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerSize">24dp</item>
    </style>

</resources>