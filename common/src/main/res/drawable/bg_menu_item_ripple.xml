<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="?attr/colorDivider" />

            <corners
                android:bottomRightRadius="@dimen/menu_item_corner_size"
                android:topRightRadius="@dimen/menu_item_corner_size" />

            <size android:height="@dimen/menu_item_height" />

        </shape>
    </item>
    <item android:drawable="@drawable/bg_menu_item_transparent" />
</selector>
